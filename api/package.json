{
  "name": "rex",
  "version": "0.0.1",
  "description": "rex rules them all",
  "main": "dst/server.js",
  "dependencies": {
    "apollo-server": "^2.0.0-rc.10",
    "apollo-server-express": "^2.0.0-rc.10",
    "express": "^4.16.3",
    "graphql": "^0.13.2",
    "graphql-relay": "^0.5.5",
    "graphql-sequelize": "^9.0.1",
    "pg": "^7.4.3",
    "pg-hstore": "^2.3.2",
    "rex-schema": "file:../schema",
    "slugify": "^1.3.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "command-line-args": "^5.0.2",
    "jest": "^23.4.2",
    "nodemon": "^1.18.3",
    "sequelize": "^4.38.0",
    "sequelize-cli": "^4.0.0"
  },
  "scripts": {
    "clean": "rm -rf dst && mkdir dst",
    "build": "npx babel src --out-dir dst",
    "start:built": "node dst/server.js",
    "start": "npm run db:migrate && nodemon src/server.js --exec babel-node",
    "db:migrate": "sequelize db:migrate",
    "db:seed:all": "sequelize db:seed:all",
    "db:seed:undo": "sequelize db:seed:undo",
    "db:seed:undo:all": "sequelize db:seed:undo:all",
    "db:sync": "babel-node src/scripts/sync_db.js",
    "db:sync:force": "babel-node src/scripts/sync_db.js --force",
    "db:reset": "npm run db:seed:undo:all && npm run db:sync-force && npm run db:seed:all",
    "db:repl": "psql -p 5432 -h localhost -U postgres",
    "test": "jest",
    "watch:test": "jest --watchAll",
    "repl": "cd src && babel-node"
  },
  "author": "",
  "license": "ISC"
}
